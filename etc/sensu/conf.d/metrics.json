{
  "checks": {
    "metric-vmstat": {
      "type": "metric",
      "command": "/etc/sensu/plugins/metrics-disk-usage.rb",
      "standalone": true,
      "interval": 10,
      "handlers": ["relay"]
    },
    "metrics-memory-percent": {
      "type": "metric",
      "command": "/etc/sensu/plugins/metrics-memory-percent.rb",
      "standalone": true,
      "interval": 10,
      "handlers": ["relay"]
    },
    "metrics-temperature-rpi": {
      "type": "metric",
      "command": "/etc/sensu/plugins/metrics-temperature-rpi.rb",
      "standalone": true,
      "interval": 10,
      "handlers": ["relay"]
    }
  }
}
